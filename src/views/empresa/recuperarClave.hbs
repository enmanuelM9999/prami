{{>navegacionEmpresa}}

<div class="container  pt-4 mt-4">
  <div class="card mt-4">
      <div class="card-body">
          <div class="card-title font-weight-bold">
              <h3>Recuperar contraseña, Empresa</h3>
          </div>
          <div class="card-text">

              <form method="POST" action="/empresa/recuperarClave" class="mt-4">
                  <div class="form-group">
                      <label for="codigo">NIT Empresa</label>
                      <input class="form-control" type="number" placeholder="" name="codigo" id="codigo">
                  </div>
                  <div class="form-group">
                      <label for="email">Correo electrónico</label>
                      <input type="email" class="form-control" id="email" name="email">
                  </div>
                  <button type="submit" class="btn btn-secondary">Recuperar</button>
                  
              </form>
              

          </div>
      </div>
  </div>
</div>