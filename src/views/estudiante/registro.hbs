{{>navegacionIndex}}

<div class="container  pt-4 mt-4">
    <div class="card mt-4">
        <div class="card-body">
            <div class="card-title font-weight-bold">
                <h3>Registrar Estudiante</h3>
            </div>
            <div class="card-text">

                <form method="POST" action="/estudiante/registro" class="mt-4">
                    <div class="form-group">
                        <label for="codigoEstudiante">Código estudiante</label>
                        <input type="text" class="form-control" id="codigoEstudiante" name="codigoEstudiante">
                    </div>
                    <div class="form-group">
                        <label for="dni">Cédula</label>
                        <input class="form-control" type="number" placeholder="" name="dni" id="dni">
                    </div>
                    <div class="form-group">
                        <label for="email">Correo UFPS</label>
                        <input type="email" class="form-control" id="email" name="email">

                    </div>

                    <div class="form-group">
                        <label for="date">Fecha de nacimiento</label>
                        <input type="date" id="date" name="date" value="2018-07-22" min="1900-01-01">
                    </div>

                    <div class="form-group">
                        <label for="password">Crear contraseña</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>

                    <button type="submit" class="btn btn-secondary">Registrar</button>

                </form>


            </div>
        </div>
    </div>
</div>