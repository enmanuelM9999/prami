    <div class="container pt-4">
        <h1> Convenios</h1>
        <h5>Crear nuevo convenio</h5>

        <br><br>

        <form action="/director/convenio/crearConvenio" method="POST">
            <div class="form-group">
                <label for="nameCon">Nombre del convenio</label>
                <input type="text" class="form-control" id="nameCon" name="nameCon">
            </div>
            <div class="form-group">
                <label for="desCon">Descripcion del convenio</label>
                <input type="text" class="form-control" id="desCon" name="desCon">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success "><i
                    class="material-icons align-middle">add</i> Crear convenio</button>
            </div>
        </form>

    </div>