{{>navegacionCoordinador}}
<style>
    #calificacion{
    background-color: rgba(255, 0, 0, 0);
    color: white;
    border: 0;
    width: 50px;

    }
</style>


<div class="container  pt-4 mt-4">
    <div class="card mt-4">
        <div class="card-body">
            <div class="card-title font-weight-bold">
                <h3>Informe {{informe.numeroInforme}} de {{informe.nombreUsuario}} - {{informe.pfkCodigoEstudiante}}</h3>
            </div>
            <div class="card-text">
                <div class="row m-3"><a href="/uploads/{{informe.rutaInforme}}" target="_blank"><i
                            class="far fa-file-pdf"></i> Abrir informe</a> </div>
                <div class="row m-3">Fecha de subida: {{informe.fechaSubida}} </div>

                <form action="/coordinador/editarinforme" method="POST">
                    <div class="row m-3">Calificacion : <span
                            class="badge badge-pill badge-primary"><input type="number" step="0.01"
                                name="calificacion" id="calificacion" value="{{informe.calificacion}}"></span>

                    </div>
                    <input name="vars" id="vars" type="hidden" value="{{informe.vars}}">
                    <div class="row m-3">Comentarios coordinador : </div>
                    <div class="row m-3"><textarea name="comentarios" id="comentarios"
                            class="form-control">{{informe.comentarioCoordinador}}</textarea></div>
                            <div class="row m-3"><button type="submit" class="btn btn-secondary">Guardar cambios</button></div>
                </form>



            </div>
        </div>
    </div>
</div>